@{
    ViewData["Title"] = "Login";
}

<div class="titulo_pagina">
    <h1>@ViewData["Title"]</h1>
</div>

<section>
        <div class="box">
            <img src="images/Instadev.svg" alt="Imagem do Logo Instadev">

            <form  method="POST" class="log" action='@Url.Action("Logar")' enctype="multipart/form-data">

                <div>
                <input type="email" autocomplete="off" name="Email" placeholder="Email...">
                </div>

                <div>
                <input type="password" name="Senha" placeholder="Senha...">
                </div>
                
                <button type="submit" name="Botao">Enviar</button>
                
            </form>

            <div class="forget">
            <p style="font-variant:small-caps;margin-top:20px;">__________________   ou   _________________</p>
            <p style="font-size:11px;"><a href="#" alt="">Esqueceu a senha ?</a></p>
            </div>
        </div>

        <div class="below">
            <p>Não tem uma conta? <a id="cadastro" asp-area=""  asp-controller="Usuario"  asp-action="Index"><b>Cadastre-se.</b></a></p>
        </div>
        <div class="final">
            <p>Obtenha o aplicativo</p>
            <div class="aplicativos">
                <a href="https://www.apple.com/br/app-store/" target="blank" alt=""><img src="~/images/app_store 1.jpg" alt=""></a>
                <a href="https://play.google.com/store" target="blank" alt=""><img src="~/images/google_play 1.jpg" alt=""></a>
            </div>
        </div>
    </section>
    <i class="erro">@TempData.Peek("Mensagem")</i>